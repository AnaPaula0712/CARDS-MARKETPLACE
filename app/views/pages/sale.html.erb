<div class="row m-0">
  <div class="col-12">
    <h2 class="title mt-5 pb-3 text-center">My cards for sale</h2>
  </div>
</div>
<div class="row justify-content-around m-0">
  <% current_user.cards.each do |card|%>
    <div class="card m-3 radius-5" style="width: 13rem;">
      <div class="flat-card">
        <div>
          <%= image_tag(card.photo, size: '205x250') %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= card.name %></h5>
          <p class="card-text">$ <%= card.price %></p>
        </div>
        <div class="card-body">
          <%= link_to 'Edit Card', edit_card_path(card), class: "btn btn-primary mb-3 radius-15" %>
          <%= link_to 'Delete',  card_path(card), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger radius-15" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
 <div style="text-align:center; margin:40px;">
    <%= link_to 'Back', cards_path, class: "btn btn-secondary btn-lg radius-15" %>
  </div>
