<h1>Cartas compradas</h1>

<div class="conteiner">
  <div class="row justify-content-around m-0">
      <% current_user.orders.each do |order| %>
        <% card = order.card %>
        <div class="card m-3 radius-5" style="width: 13rem;">
        <div class="flat-card">
          <div>
            <h3><strong>Data de compra: <%= card.created_at.strftime('%F') %></strong></h3>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= card.name %></h5>
            <p class="card-text">R$<%= card.price %></p>
          </div>
            <div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Vestibulumas justtibulumestibul estibul </li>
          </ul>
          <div class="card-body">
            <%= link_to 'Detalhes da carta', card_path(card), class: "btn btn-outline-dark btn-sm" %>
          </div>
      <% end %>
  </div>
</div>
