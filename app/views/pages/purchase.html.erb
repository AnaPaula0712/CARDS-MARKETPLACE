<h1>Your purchased cards</h1>

<div class="conteiner">
  <div class="row justify-content-around m-0">
      <% current_user.orders.each do |order| %>
        <% card = order.card %>
        <div class="card m-3 radius-5" style="width: 13rem;">
        <div class="flat-card">
          <div>
            <h3><strong>Purchase date: <%= card.created_at.strftime('%F') %></strong></h3>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= card.name %></h5>
            <p class="card-text">$<%= card.price %></p>
          </div>
          <div class="card-body">
            <%= link_to '+ info', card_path(card), class: "btn btn-outline-dark btn-sm" %>
          </div>
      <% end %>
  </div>
</div>
