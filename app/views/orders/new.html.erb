<h1>Confirmação da compra</h1>

<div>
  <tbody>
      <div>
        <h2><strong>Nome: <%= @card.name %></strong></h2>
        <h3><%= image_tag(@card.photo, size: '120x200') %></h3>
        <h3><strong>Preço: R$<%= @card.price %></strong></h3>
        <h3><strong>Tipo: </strong><%= @card.category %></h3>
        <h3><strong>Brilhante? </strong><%= @card.foil %></h3>
        <h3><strong>Estado de conservação: </strong><%= @card.conservation_state %></h3>
        <h3><strong>Cor: </strong><%= @card.color %></h3>
        <h3><strong>Edição: </strong><%= @card.edition %></h3>
        <h3><strong>Raridade: </strong><%= @card.rarity %></h3>
      </div>
      <%= simple_form_for [@card, @order] do |f| %>
        <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
        <%= f.button :submit, 'Confirmação da compra', class: "btn btn-outline-secondary"%>
      <% end %>
      <%= link_to "Desistir a compra", cards_path, class: "btn btn-outline-secondary"%>
  </tbody>
</div>
