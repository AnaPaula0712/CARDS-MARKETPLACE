<div class="cards-banner-bg m-0" >
  <div class="row m-0">
    <div class="col-12">
      <h2 class="title mt-5 pb-3 text-center">Cards for sale</h2>
      <div class="row justify-content-around mb-5 ">
        <div>
          <%= link_to 'Put your card up for sale', new_card_path, class: "btn btn-info radius-15" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-around m-0">
    <% @cards.each do |card| %>
      <div class="card m-3 radius-5" style="width: 13rem;">
        <div class="flat-card">
          <div>
            <%= cl_image_tag card.photo.key, size: '205x250' %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= card.name %></h5>
            <p class="card-text">$<%= card.price %></p>
          </div>
          <div class="card-body">
            <%= link_to '+ info', card_path(card), class: "btn btn-outline-dark btn-sm radius-15" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
