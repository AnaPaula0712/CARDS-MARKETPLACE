<%= simple_form_for(card) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="container">
      <div>
        <h1><strong> Create New Cards </strong></h1>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12 form-inputs mb-2 radius-15" >
        <h2><%= f.input :name %></h2>
        <h2><%= f.input :price %></h2>
        <h2><%= f.input :category, collection: Card::CATEGORIES %></h2>
        <h2><%= f.input :foil %></h2>
        <h2><%= f.input :conservation_state, collection: Card::CONSERVATIONS %></h2>
        <h2><%= f.input :color, collection: Card::COLORS %></h2>
        <h2><%= f.input :edition %></h2>
        <h2><%= f.input :rarity, collection: Card::RARITIES %></h2>
        <h2><%= f.input :photo %></h2>
      </div>

      <div class="form-actions">
        <button type="button" class="btn btn-primary btn-lg mb-4" data-toggle="modal" data-target="#exampleModalCenter">
          Create Card </button>

        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Loading New Card</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                Are you sure?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
